                    <%= userInfo.content %>
                  </p>
                </blockquote>

                <p>
                  <%= userInfo.content %>  
                </p>
                

              </div>

              <div class="entry-footer">
                <i class="bi bi-folder"></i>
                <ul class="cats">
                  <li><a href="#"><%= userInfo.univ %></a></li>
